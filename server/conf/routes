# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /team                       controllers.Application.team()
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()

# Project
# TO DELETE
GET		/projects/:id.json			controllers.DataEntry.edit( id, mode: Integer ?= 1)
GET		/projects/:id				controllers.DataEntry.edit( id, mode: Integer ?= 0)

#Paths de debug, ne devrait jamais etre utilise seul
GET		/systems/:id				controllers.DataEntry.system( id )
POST	/systems/:id				controllers.DataEntry.update( id )

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
