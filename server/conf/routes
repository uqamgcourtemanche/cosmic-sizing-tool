# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /team                       controllers.Application.team()
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()

#Project
GET		/projects/:id.json			controllers.Project.edit( id, mode: Integer ?= 1)
GET		/projects/:id				controllers.Project.edit( id, mode: Integer ?= 0)
GET		/projects/					controllers.Project.list()
GET		/projects					controllers.Project.list()

#Paths de debug, ne devrait jamais etre utilise seul
GET		/systems/:id				controllers.Project.system( id )

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
